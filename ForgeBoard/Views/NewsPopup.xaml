<UserControl x:Class="ForgeBoard.Views.NewsPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ForgeBoard.Views"
             mc:Ignorable="d"  
             BorderBrush="#113536"
             BorderThickness="0.5"
             Background="{DynamicResource BackgroundMainWindow}">
    <Grid Height="450"
          Width="600">
        <Grid.Background>
            <ImageBrush ImageSource="../Resources/logo.png"  
                        Opacity="0.12"
                        Stretch="Uniform" 
                        AlignmentX="Center" 
                        AlignmentY="Center"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions> 
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="70"/>
            </Grid.ColumnDefinitions>
            <Border Background="#112123"
                    Grid.ColumnSpan="8"/>
            <TextBlock Foreground="White"  
                       Grid.ColumnSpan="8"
                       Margin="3,10"
                       Text="NEWS CALENDAR"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontWeight="Bold"/>
            <TextBlock Text="TIME"  
                        Foreground="{DynamicResource FontControlBrush}"   
                       Grid.Row="1"
                       VerticalAlignment="Center"
                       Margin="3" 
                       TextDecorations="Underline"/>
            <ComboBox    
                Name="CountryFilter"
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                ItemsSource="{Binding Path=NewsCountry}"
                Grid.Column="1"
                Grid.Row="1"
                IsEditable="False"
                IsReadOnly="False"
                LostFocus="CountryFilter_LostFocus">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <CheckBox IsChecked="{Binding Path=Checked}" Content="{Binding Path=Label}"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!--<TextBlock Text="COUNTRY" 
                       Grid.Column="1"
                       Grid.Row="1"
                       Foreground="{DynamicResource FontControlBrush}"
                       VerticalAlignment="Center" 
                       Margin="3" 
                       TextDecorations="Underline"/>-->

            <ComboBox   
                Name="ImpactFilter"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Grid.Column="2"
                Grid.Row="1"
                SelectionChanged="Filter_SelectionChanged">
                <ComboBoxItem Content="ALL" IsSelected="True"/>
                <ComboBoxItem Content="MEDIUM" />
                <ComboBoxItem Content="HIGH" />
            </ComboBox>
            <!--<TextBlock Text="IMPACT" 
                       Grid.Column="2"
                       Grid.Row="1"
                       VerticalAlignment="Center"
                       Margin="3" 
                       Foreground="{DynamicResource FontControlBrush}"
                       TextDecorations="Underline"/>-->
            <TextBlock Text="NAME" 
                       Margin="10,0,0,0"
                       Grid.Column="3"
                       Grid.Row="1"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource FontControlBrush}"
                       TextDecorations="Underline"/>
            <TextBlock Text="PREVIOUS" 
                       Grid.Column="4"
                       Grid.Row="1"
                       VerticalAlignment="Center"
                       Margin="3" 
                       Foreground="{DynamicResource FontControlBrush}"
                       TextDecorations="Underline"/>
            <TextBlock Text="ACTUAL" 
                       Grid.Column="5"
                       Grid.Row="1"
                       VerticalAlignment="Center"
                       Margin="3" 
                       Foreground="{DynamicResource FontControlBrush}"
                       TextDecorations="Underline"/>
            <TextBlock Text="FORECAST" 
                       Grid.Column="6"
                       Grid.Row="1"
                       VerticalAlignment="Center"
                       Margin="3" 
                       Foreground="{DynamicResource FontControlBrush}"
                       TextDecorations="Underline"/>
        </Grid>
        <Border BorderBrush="#0C2024" 
                Grid.Row="1"
                BorderThickness="1.5">
            <ScrollViewer VerticalScrollBarVisibility="Hidden"
                          HorizontalScrollBarVisibility="Hidden">
                <ItemsControl ItemsSource="{Binding FilteredNews, UpdateSourceTrigger=PropertyChanged}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource TabBackground}"
                                    BorderBrush="{DynamicResource FontControlBrush}"
                                    BorderThickness="0.5" 
                                    Margin="1.5"
                                    CornerRadius="5">
                                    <Grid Width="595">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="70"/>
                                        </Grid.ColumnDefinitions>
                                        <Label VerticalAlignment="Center"
                                           Foreground="{DynamicResource FontControlBrush}"
                                           Content="{Binding HourStr}"/>
                                        <Label VerticalAlignment="Center"
