<UserControl x:Class="ForgeBoard.Views.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             TextOptions.TextRenderingMode="Auto"
             TextOptions.TextFormattingMode="Ideal"
             RenderOptions.ClearTypeHint="Auto"
             mc:Ignorable="d" 
             BorderBrush="#113536"
             BorderThickness="0.5"
             Background="{DynamicResource BackgroundMainWindow}">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Style.Setters> 
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#4ACA91"/>
                    <Setter Property="Background" Value="#0C2024"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Height="250"
          Width="300">
        <Grid.Background>
            <ImageBrush ImageSource="../Resources/logo.png"  
                        Opacity="0.12"
                        Stretch="Uniform" 
                        AlignmentX="Center" 
                        AlignmentY="Center"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Border Background="#112123" />
        <Border Background="#112123" 
                Grid.Row="2"/>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="3">
            <Button Click="Button_Click_5"
                    
                    Margin="2">
                <Path Fill="White"
                      Height="20"
                      Stretch="Uniform"
                      Data="M0.5,91.5L61.5,91.5 61.5,98.5 0.5,98.5z M0.5,80.5L61.5,80.5 61.5,87.5 0.5,87.5z M0.5,69.5L61.5,69.5 61.5,76.5 0.5,76.5z M0.5,58.5000009536743L61.5,58.5000009536743 61.5,65.5 0.5,65.5z M0.5,46.499999165535L124.5,46.499999165535 124.5,53.5 0.5,53.5z M63.5,33.5L124.5,33.5 124.5,40.4999995231628 63.5,40.4999995231628z M63.5,22.5L124.5,22.5 124.5,29.5 63.5,29.5z M63.5,11.5L124.5,11.5 124.5,18.5 63.5,18.5z M63.5,0.5L124.5,0.5 124.5,7.5 63.5,7.5z"
                      Margin="2">
                </Path>
            </Button>
            <Button Click="Button_Click_4"
                    Margin="2">
                <Path Fill="White"
                      Height="20"
                      Stretch="Uniform"
                      Margin="2"
                      Data="M122.499996185303,134.5L125.5,134.5 125.5,149.499998807907 138.5,149.499998807907 138.5,207.5 125.5,207.5 125.5,231.5 122.499996185303,231.5 122.499996185303,207.5 109.5,207.5 109.5,149.499998807907 122.499996185303,149.499998807907z M13.5,129.500003814697L16.5,129.500003814697 16.5,163.499995231628 29.5,163.499995231628 29.5,292.5 16.5,292.5 16.5,326.5 13.5,326.5 13.5,292.5 0.5,292.5 0.5,163.499995231628 13.5,163.499995231628z M85.5,87.5L88.5,87.5 88.5,104.5 102.5,104.5 102.5,207.5 89.5,207.5 89.5,257.5 86.5,257.5 86.5,207.5 73.5,207.5 73.5,104.5 85.5,104.5z M50.5,79.5L53.5,79.5 53.5,104.5 66.5,104.5 66.5,163.5 53.5,163.5 53.5,197.5 50.5,197.5 50.5,163.5 37.5,163.5 37.5,104.5 50.5,104.5z M159.500001490116,0.5L162.500000476837,0.5 162.500000476837,22.5 175.500003814697,22.5 175.500003814697,151.499999672174 162.500005245209,151.499999672174 162.500005245209,166.499999046326 159.500001490116,166.499999046326 159.500001490116,151.499999672174 146.499998092651,151.499999672174 146.499998092651,22.5 159.500001490116,22.5z">


                </Path></Button>
            <Button Click="Button_Click"
                    Margin="2">
                <Path Fill="#FFE64343"
                      Height="20"
                      Stretch="Uniform"
                      Margin="2"
                      Data="M16.56,5.44L15.11,6.89C16.84,7.94 18,9.83 18,12A6,6 0 0,1 12,18A6,6 0 0,1 6,12C6,9.83 7.16,7.94 8.88,6.88L7.44,5.44C5.36,6.88 4,9.28 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12C20,9.28 18.64,6.88 16.56,5.44M13,3H11V13H13"/>
            </Button>
        </StackPanel>
                    
        <Border BorderBrush="#0C2024"
                Grid.Row="1"
                BorderThickness="1.5">
            <ItemsControl Background="Transparent"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch"
                      ItemsSource="{Binding AvailableExtensions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button DataContext="{Binding}"
                                Foreground="White"
                                
                                BorderThickness="0"
                                Margin="3"
                                Background="#BF0C2024"
                                Click="Button_Click_3">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="{Binding Name}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="3"
                                       Foreground="White"/>
                                <Path Stroke="White"  
                                      Margin="2"
                                      Height="15"
                                      Grid.Column="1"
                                      Data="{Binding PathLogo}" 
                                      Stretch="Uniform" />
                            </Grid>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
        <Image Grid.Row="2"
               HorizontalAlignment="Right"
               Height="15"
               Margin="3,1"
               Source="https://tradeforge.fr/wp-content/uploads/2023/12/logo3.png"/>
    </Grid>
</UserControl>
